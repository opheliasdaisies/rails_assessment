<h1>Your Posts</h1>
<table>
  <tr>  
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Delete", post, {:method => "delete", :data => {:confirm => "Are you sure you want to delete this post?"}}%></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to "Create a new post", new_post_path %>